<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.edu.ContractPurchaseCourseActivity"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4">

    <include layout="@layout/toolbar_head"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center_vertical"
            android:background="@drawable/solid_shape_white"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginTop="@dimen/marginTop_10">
        <TextView
                android:layout_width="3dp"
                android:layout_height="10dp"
                android:background="@color/textcolor_red"
                android:layout_marginLeft="@dimen/marginLeft_12"/>
        <TextView
                android:text="签约学员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/marginLeft_12"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"/>
        <TextView
                android:text="苏大牙"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_contractMember"
                android:layout_marginLeft="@dimen/marginLeft_12"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:layout_marginRight="@dimen/marginRight_12"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/ll_productContract"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center_vertical"
            android:background="@drawable/solid_shape_white"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginTop="@dimen/marginTop_10">
        <TextView
                android:layout_width="3dp"
                android:layout_height="10dp"
                android:background="@color/textcolor_red"
                android:layout_marginLeft="@dimen/marginLeft_12"/>
        <TextView
                android:text="产品合同"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/marginLeft_12"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"/>
        <TextView
                android:id="@+id/tv_productContract"
                android:text="请选择"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft_12"
                android:textColor="@color/text_color_a5a5a5"
                android:textSize="@dimen/text_size_13"
                android:layout_marginRight="@dimen/marginRight_12"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>

    <TextView
            android:id="@+id/tv_complete"
            android:text="完成"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_color_333333"
            android:background="@color/background_yellow"/>

</LinearLayout>