<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4"
        tools:context=".ui.activity.fiance.BookkeepingActivity">

    <include layout="@layout/toolbar_head_text_right_two_img"
             android:id="@+id/toolbar"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_margin="@dimen/margin_10">

        <com.example.administrator.oper.ui.widget.TabPageIndicator
                android:id="@+id/indicator_bookkeeping"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/head_img"
                android:background="@drawable/solid_shape_white_top_left_right"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_f4f4f4"/>

        <android.support.v4.view.ViewPager
                android:id="@+id/vp_bookkeeping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/NestedScrollView"
                android:background="#ffffff"/>
    </LinearLayout>
    <include layout="@layout/view_line_onedp"/>

</LinearLayout>