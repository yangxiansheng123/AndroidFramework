<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.activity.edu.ContractManagementActivity"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_marginRight="@dimen/marginRight_10"
        android:layout_marginBottom="@dimen/marginBottom_10"
        android:background="@color/background_f4f4f4">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_shape_white">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/paddingRight_10"
                android:paddingTop="@dimen/paddingTop_10"
                android:background="@drawable/solid_shape_white">

            <TextView
                    android:id="@+id/tv_contractPackage"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginLeft="9dp"/>
            <TextView
                    android:id="@+id/tv_coursePrice"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_red"
                    android:textSize="@dimen/text_size_12"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_48"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <TextView
                    android:id="@+id/tv_contractClassHour"
                    android:text="c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_AEAEAE"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginTop="@dimen/marginTop_8"
                    android:paddingLeft="@dimen/paddingLeft_10"
                    android:paddingRight="@dimen/paddingRight_10"
                    android:layout_weight="1"
                    android:layout_marginLeft="9dp"/>
            <TextView
                    android:id="@+id/tv_contractIncreaseCourse"
                    android:text="c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_AEAEAE"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginTop="@dimen/marginTop_8"
                    android:paddingLeft="@dimen/paddingLeft_10"
                    android:paddingRight="@dimen/paddingRight_10"
                    android:layout_weight="1"
                    android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_35"
                android:background="@drawable/solid_shape_f4_bottom_left_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_10"
                android:layout_marginTop="@dimen/marginTop_15">
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/clock"
                    android:gravity="left|center_vertical"/>

            <TextView
                    android:id="@+id/tv_contractApplication"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/text_color_a5a5a5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:background="@color/background_F9F9F9"
                    android:ellipsize="end"
                    android:layout_marginLeft="3dp"
                    android:paddingRight="@dimen/paddingRight_10"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>