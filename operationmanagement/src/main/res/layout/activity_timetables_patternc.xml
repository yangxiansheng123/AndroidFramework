<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/background_f4f4f4"
              android:paddingBottom="@dimen/marginBottom_10">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">
        <TextView
                android:id="@+id/tv_classTitle"
                android:text="10:30-10:30 钢琴室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/text_color_333333"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:layout_marginTop="@dimen/marginTop_10"/>

        <TextView
                android:id="@+id/tv_stopClass"
                android:text="调/停课"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/textcolor_blue"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:layout_marginTop="@dimen/marginTop_10"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/marginTop_40">
            <TextView
                    android:id="@+id/tv_curriculum"
                    android:text="钢琴初级课程"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/teacher_head"
                    android:id="@+id/imageView6"/>
            <TextView
                    android:id="@+id/tv_teacher"
                    android:text="老师 苏大牙"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_a5a5a5"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="6dp"/>
            <TextView
                    android:id="@+id/tv_teacherName"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/marginTop_70">
            <TextView
                    android:id="@+id/tv_classroom"
                    android:text="钢琴二班"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_a5a5a5"
                    android:textSize="@dimen/text_size_13"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_studying"
                    android:text="在读：4/50  试听：0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_green"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="6dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <include layout="@layout/view_line_onedp"/>
</LinearLayout>