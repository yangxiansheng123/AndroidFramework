<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.edu.OneToOneDetailsActivity"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginTop="@dimen/marginTop_10"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="@dimen/marginBottom_10">
        <TextView
                android:id="@+id/tv_timetable"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginTop="@dimen/marginTop_10"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/checked_true"
                android:id="@+id/imageView7"
                android:layout_marginRight="@dimen/marginRight_12"
                android:layout_marginTop="@dimen/marginTop_10"
                android:layout_gravity="right"/>


        <TextView
                android:id="@+id/tv_category"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginTop="@dimen/marginTop_40"/>

        <TextView
                android:id="@+id/tv_teacherName"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginTop="@dimen/marginTop_70"/>

        <TextView
                android:id="@+id/tv_studentCount"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/marginRight_12"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginTop="@dimen/marginTop_70"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/background_f4f4f4"
              android:layout_marginTop="95dp"/>

        <LinearLayout
                android:id="@+id/ll_seeCourseArrangement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/marginTop_105"
                android:layout_marginBottom="@dimen/marginBottom_10">

            <TextView
                    android:text="查看课程安排"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_blue"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginLeft="@dimen/marginLeft_10"
                    android:layout_weight="1"/>


            <ImageView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/marginRight_12"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="学员列表"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_48"
            android:gravity="center"
            android:background="@drawable/solid_shape_white_top_left_right"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/text_size_13"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"
            android:textStyle="bold"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_f4f4f4"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"/>
</LinearLayout>