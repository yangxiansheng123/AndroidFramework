<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_00000000"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.daily.CreateAJobActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/solid_shape_white"
            android:fitsSystemWindows="true"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginBottom="@dimen/marginBottom_10"
            tools:context=".ui.activity.daily.CreateAJobActivity">


        <LinearLayout
                android:id="@+id/ll_picture"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_15"
                android:layout_marginTop="@dimen/marginTop_20">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/video_icon"/>
            <TextView
                    android:text="选择图片"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginLeft="@dimen/marginLeft_20"/>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_video"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_15"
                android:layout_marginTop="@dimen/marginTop_20"
                android:layout_marginBottom="@dimen/marginBottom_20">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/video_icon"/>
            <TextView
                    android:text="选择视频"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginLeft="@dimen/marginLeft_20"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>