<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.edu.AddCassActivity"
        android:orientation="vertical"
        android:background="@drawable/solid_shape_white">

    <LinearLayout
            android:id="@+id/ll_head"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center"
            android:paddingLeft="@dimen/paddingLeft_10"
            android:paddingRight="@dimen/paddingRight_10">
        <TextView
                android:text="添加快捷跟进"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_color_333333"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_f4f4f4"
            android:layout_marginRight="@dimen/marginRight_20"
            android:layout_marginLeft="@dimen/marginLeft_20"
            android:layout_marginBottom="@dimen/marginBottom_10"
            android:layout_marginTop="@dimen/marginTop_10"
            android:layout_below="@+id/ll_head">


        <EditText
                android:id="@+id/et_inputDetailsQuestion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_150"
                android:background="@null"
                android:gravity="top"
                android:hint=""
                android:lineSpacingMultiplier="1.3"
                android:maxLength="450"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_14"/>

        <TextView
                android:id="@+id/tv_numberRestriction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginBottom_14"
                android:layout_marginTop="@dimen/marginTop_10"
                android:gravity="right"
                android:paddingRight="@dimen/paddingRight_17"
                android:text="0 / 300字"
                android:textSize="@dimen/text_size_13"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center"
            android:layout_below="@+id/ll_center"
            android:layout_marginBottom="@dimen/marginBottom_30">
        <TextView
                android:id="@+id/tv_cancel"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_44"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white"
                android:background="@color/textcolor_999999"
                android:gravity="center"
                android:layout_marginLeft="@dimen/marginLeft_20"/>

        <TextView
                android:id="@+id/tv_confirm"
                android:text="确定"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_44"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white"
                android:background="#fbd416"
                android:gravity="center"
                android:layout_marginLeft="@dimen/marginLeft_20"
                android:layout_marginRight="@dimen/marginRight_20"/>
    </LinearLayout>

</RelativeLayout>