<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:toggle="http://scchemas.android.com/apk/res-auto"
        xmlns:app1="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.edu.AddARecordActivity"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4">

    <include layout="@layout/toolbar_head_text_right"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_margin="@dimen/margin_10">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_f4f4f4"
                android:layout_marginRight="@dimen/marginRight_10"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginTop="@dimen/marginTop_10">


            <EditText
                    android:id="@+id/et_inputDetailsQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_150"
                    android:background="@null"
                    android:gravity="top"
                    android:hint=""
                    android:lineSpacingMultiplier="1.3"
                    android:maxLength="450"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_14"/>

            <TextView
                    android:id="@+id/tv_numberRestriction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginBottom_14"
                    android:layout_marginTop="@dimen/marginTop_10"
                    android:gravity="right"
                    android:paddingRight="@dimen/paddingRight_17"
                    android:text="0 / 300字"
                    android:textSize="@dimen/text_size_13"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center"
                android:paddingRight="@dimen/paddingRight_13">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginLeft="@dimen/marginLeft_10"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View android:layout_width="1dp"
                  android:layout_height="@dimen/layout_height_30"
                  android:background="@color/background_f4f4f4"
                  android:layout_marginLeft="@dimen/marginLeft_15"
                  android:layout_marginRight="@dimen/marginRight_10"/>


            <TextView
                    android:id="@+id/tv_quickFollowUp"
                    android:text="快捷跟进"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginLeft="@dimen/marginLeft_10"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:orientation="vertical">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center"
                android:paddingRight="@dimen/paddingRight_13">
            <TextView
                    android:text="跟进方式"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginLeft="@dimen/marginLeft_10"/>
            <TextView
                    android:id="@+id/tv_followUpMethod"
                    android:text="请选择"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_13"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_a5a5a5"
                    android:drawableRight="@mipmap/arrow_right"
                    android:drawablePadding="@dimen/drawablePadding_6"/>
        </LinearLayout>
        <include layout="@layout/view_line_onedp"/>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center"
                android:paddingRight="@dimen/paddingRight_13">
            <TextView
                    android:text="下次跟进时间"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginLeft="@dimen/marginLeft_10"/>
            <TextView
                    android:id="@+id/tv_nextFollowUpTime"
                    android:text="明天"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_13"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_a5a5a5"
                    android:drawableRight="@mipmap/arrow_right"
                    android:drawablePadding="@dimen/drawablePadding_6"/>
        </LinearLayout>
        <include layout="@layout/view_line_onedp"/>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center"
                android:paddingRight="@dimen/paddingRight_13">
            <TextView
                    android:text="学员评定"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginLeft="@dimen/marginLeft_10"/>
            <TextView
                    android:id="@+id/tv_studentAssessment"
                    android:text="A类学员"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_13"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/text_color_a5a5a5"
                    android:drawableRight="@mipmap/arrow_right"
                    android:drawablePadding="@dimen/drawablePadding_6"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>