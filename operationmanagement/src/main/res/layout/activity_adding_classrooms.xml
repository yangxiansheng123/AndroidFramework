<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_f4f4f4"
        tools:context=".ui.activity.edu.AddingClassroomsActivity" android:orientation="vertical">
    <include layout="@layout/toolbar_head"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_shape_recharge_white"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginTop="@dimen/marginTop_10">


        <TextView
                android:text="基本信息"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_16"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:textStyle="bold"
                android:fontFamily="Typeface.SANS_SERI"/>

        <include layout="@layout/view_line_onedp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/layout_height_50"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/paddingLeft_16">
            <TextView
                    android:text="教室名称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"/>
            <EditText
                    android:id="@+id/et_classroomName"
                    android:hint="请输入"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginRight="@dimen/marginRight_16"/>
        </LinearLayout>


        <include layout="@layout/view_line_onedp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/layout_height_48"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/paddingLeft_16">
            <TextView
                    android:text="限坐学员"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"/>
            <EditText
                    android:id="@+id/et_limitSittingCount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginRight="@dimen/marginRight_16"/>

            <TextView
                    android:text="人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginRight_16"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_shape_recharge_white"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginTop="@dimen/marginTop_10">


        <TextView
                android:text="备注"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_16"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:textStyle="bold"
                android:fontFamily="Typeface.SANS_SERI"/>



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/layout_height_150"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:background="@drawable/solid_shape_white_bootom_lright">
            <EditText
                    android:id="@+id/tv_addClassRemarks"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_f4f4f4"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_margin="@dimen/margin_10"
                    android:padding="@dimen/padding_10"
                    android:layout_marginRight="@dimen/marginRight_16"/>

        </LinearLayout>


    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <TextView
            android:id="@+id/tv_complete"
            android:text="完成"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            android:background="@color/background_yellow"/>

</LinearLayout>