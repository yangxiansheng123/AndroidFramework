<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4"
        tools:context=".ui.activity.me.PersonalInfoActivity">
    <include layout="@layout/toolbar_head"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_shape_recharge_white"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginTop="@dimen/marginTop_10">


        <TextView
                android:id="@+id/tv_baseInfo"
                android:text="基本信息"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_16"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:textStyle="bold"
                android:fontFamily="Typeface.SANS_SERI"/>

        <include layout="@layout/view_line_onedp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/layout_height_50"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/paddingLeft_16">
            <TextView
                    android:text="姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"/>
            <EditText
                    android:id="@+id/et_inputName"
                    android:hint="输入姓名"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginRight="@dimen/marginRight_16"/>
        </LinearLayout>


        <include layout="@layout/view_line_onedp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/layout_height_50"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/paddingLeft_16">
            <TextView
                    android:text="性别"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"/>
            <TextView
                    android:id="@+id/tv_sex"
                    android:text="男"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/marginRight_16"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/text_color_333333"/>
        </LinearLayout>

        <include layout="@layout/view_line_onedp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/layout_height_50"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/paddingLeft_16">
            <TextView
                    android:text="电话"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"/>
            <EditText
                    android:id="@+id/et_inputPhone"
                    android:hint="输入电话"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:textSize="@dimen/text_size_13"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/text_color_333333"
                    android:layout_marginRight="@dimen/marginRight_16"/>
        </LinearLayout>

        <include layout="@layout/view_line_onedp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/layout_height_50"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/paddingLeft_16">
            <TextView
                    android:text="职位"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"/>
            <TextView
                    android:text="（不可修改）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_a5a5a5"
                    android:textSize="@dimen/text_size_10"/>
            <TextView
                    android:text="销售经理"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/marginRight_16"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>
    <TextView
            android:id="@+id/tv_saveInfo"
            android:text="保存"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_48"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_color_333333"
            android:background="@color/background_yellow"/>
</LinearLayout>