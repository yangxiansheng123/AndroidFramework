<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.edu.ClassTimeListActivity"
        android:orientation="vertical"
        android:background="@color/background_00000000">

    <LinearLayout
            android:id="@+id/ll_timesetting"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center_vertical"
            android:background="@color/white">
        <TextView
                android:id="@+id/tv_time"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft_12"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/textcolor_666666"/>
    </LinearLayout>

    <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/background_f4f4f4"/>
</LinearLayout>