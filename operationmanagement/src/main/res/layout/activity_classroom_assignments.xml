<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_f4f4f4"
        tools:context=".ui.activity.daily.ClassroomAssignmentsActivity" android:orientation="vertical">
    <include layout="@layout/toolbar_head"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/white">
                <TextView
                        android:id="@+id/tv_homeworkTitl"
                        android:text="第三节课堂作业"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/tv_isbatches"
                        android:text="已批0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolor_red"
                        android:textSize="@dimen/text_size_13"/>

            </LinearLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_100"
                    android:background="@color/white"
                    android:paddingTop="@dimen/paddingTop_10"
                    android:paddingBottom="@dimen/paddingBottom_10">

                <ImageView
                        android:id="@+id/img_head"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>
                <TextView
                        android:id="@+id/tv_name"
                        android:text="苏达雅"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|top"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="100dp"
                        android:textSize="@dimen/text_size_12"
                        android:layout_marginBottom="@dimen/marginBottom_15"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/tv_firstSubmission"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|top"
                        android:textColor="@color/textcolor_AEAEAE"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="@dimen/marginTop_25"
                        android:textSize="@dimen/text_size_10"/>
                <TextView
                        android:id="@+id/tv_modifyTime"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|top"
                        android:textColor="@color/textcolor_AEAEAE"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="@dimen/marginTop_40"
                        android:textSize="@dimen/text_size_10"/>
                <TextView
                        android:id="@+id/tv_correctionTime"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|top"
                        android:textColor="@color/textcolor_AEAEAE"
                        android:layout_marginLeft="100dp"
                        android:textSize="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/marginTop_55"/>

                <TextView
                        android:id="@+id/tv_returnHomework"
                        android:text="退回作业"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right|top"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="@dimen/marginTop_40"
                        android:layout_marginRight="@dimen/marginRight_10"
                        android:background="@drawable/solid_shape_yellow"
                        android:paddingBottom="@dimen/paddingBottom_5"
                        android:paddingTop="@dimen/paddingTop_5"
                        android:textSize="@dimen/text_size_10"
                        android:paddingRight="@dimen/paddingRight_10"
                        android:paddingLeft="@dimen/paddingLeft_10"/>
            </FrameLayout>


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/solid_shape_recharge_white"
                    android:layout_marginTop="@dimen/marginTop_10"
                    android:layout_margin="@dimen/margin_10">


                <TextView
                        android:text="学生作业"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_45"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/paddingLeft_10"
                        android:paddingRight="@dimen/paddingRight_10"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13"/>

                <include layout="@layout/view_line_onedp"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical">
                    <TextView
                            android:id="@+id/tv_homeworkExplain"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_333333"
                            android:textSize="@dimen/text_size_13"
                            android:background="@color/background_f4f4f4"
                            android:layout_margin="@dimen/margin_10"
                            android:padding="10dp"
                            android:lineSpacingMultiplier="1.2"/>
                </LinearLayout>


                <include layout="@layout/view_line_onedp"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/layout_height_50"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="@dimen/paddingLeft_10"
                              android:paddingRight="@dimen/paddingRight_10">
                    <TextView
                            android:text="作业附件   "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_333333"
                            android:textSize="@dimen/text_size_13"/>
                    <TextView
                            android:text="(共4个)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor_red"
                            android:textSize="@dimen/text_size_13"/>
                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/layout_height_50"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="@dimen/paddingLeft_10"
                              android:paddingRight="@dimen/paddingRight_10">
                    <TextView
                            android:text="作业"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_333333"
                            android:textSize="@dimen/text_size_13"
                            android:drawableLeft="@mipmap/work_icon"
                            android:drawablePadding="@dimen/drawablePadding_6"
                            android:gravity="center"/>

                </LinearLayout>


                <include layout="@layout/view_line_onedp"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/layout_height_50"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="@dimen/paddingLeft_10"
                              android:paddingRight="@dimen/paddingRight_10">
                    <TextView
                            android:text="image.png"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_333333"
                            android:textSize="@dimen/text_size_13"
                            android:drawableLeft="@mipmap/work_icon"
                            android:drawablePadding="@dimen/drawablePadding_6"
                            android:gravity="center"/>

                </LinearLayout>


                <include layout="@layout/view_line_onedp"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/layout_height_50"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="@dimen/paddingLeft_10"
                              android:paddingRight="@dimen/paddingRight_10">
                    <TextView
                            android:text="录音kknn.mps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_333333"
                            android:textSize="@dimen/text_size_13"
                            android:drawableLeft="@mipmap/video_icon"
                            android:drawablePadding="@dimen/drawablePadding_6"
                            android:gravity="center"/>

                </LinearLayout>


                <include layout="@layout/view_line_onedp"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/layout_height_50"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="@dimen/paddingLeft_10"
                              android:paddingRight="@dimen/paddingRight_10">
                    <TextView
                            android:text="kjakkj.mov"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_333333"
                            android:textSize="@dimen/text_size_13"
                            android:drawableLeft="@mipmap/video_icon"
                            android:drawablePadding="@dimen/drawablePadding_6"
                            android:gravity="center"/>

                </LinearLayout>


                <include layout="@layout/view_line_onedp"/>

            </LinearLayout>


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/solid_shape_recharge_white"
                    android:layout_marginTop="@dimen/marginTop_10"
                    android:layout_margin="@dimen/margin_10">


                <TextView
                        android:text="写评语"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_45"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/paddingLeft_10"
                        android:paddingRight="@dimen/paddingRight_10"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/text_size_13"/>

                <include layout="@layout/view_line_onedp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_50"
                        android:gravity="center"
                        android:paddingLeft="@dimen/paddingLeft_10"
                        android:paddingRight="@dimen/paddingRight_10">
                    <TextView
                            android:text="作业评分(选填)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/text_color_333333"/>
                    <TextView
                            android:id="@+id/tv_jobScore"
                            android:text="请选择"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_size_13"
                            android:gravity="center_vertical|right"/>
                </LinearLayout>
                <include layout="@layout/view_line_onedp"/>

                <TextView
                        android:text="作业评语(选填)"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_50"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"
                        android:gravity="center_vertical"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/background_f4f4f4"
                        android:layout_marginRight="@dimen/marginRight_10"
                        android:layout_marginLeft="@dimen/marginLeft_10">


                    <EditText
                            android:id="@+id/et_inputDetailsQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_height_150"
                            android:background="@null"
                            android:gravity="top"
                            android:hint=""
                            android:paddingLeft="@dimen/paddingLeft_8"
                            android:paddingTop="@dimen/paddingTop_8"
                            android:lineSpacingMultiplier="1.3"
                            android:maxLength="450"
                            android:textColor="@color/text_color_333333"
                            android:textSize="@dimen/text_size_14"/>


                    <TextView
                            android:id="@+id/tv_numberRestriction"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/marginBottom_14"
                            android:layout_marginTop="@dimen/marginTop_10"
                            android:gravity="right"
                            android:paddingRight="@dimen/paddingRight_17"
                            android:text="0 / 300字"
                            android:textSize="@dimen/text_size_13"/>
                </LinearLayout>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="@dimen/marginTop_15"
                      android:background="@color/background_f4f4f4"/>

                <TextView
                        android:text="批改附件 (选填)"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_50"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"
                        android:gravity="center_vertical"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_50"
                        android:gravity="center"
                        android:paddingRight="@dimen/paddingRight_13">

                    <View android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>
                    <TextView
                            android:id="@+id/tv_uploadFile"
                            android:text="上传附件"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/text_color_333333"
                            android:layout_marginLeft="@dimen/marginLeft_10"
                            android:drawableLeft="@mipmap/upload_icon"
                            android:gravity="center_vertical"
                            android:background="@drawable/solid_shape_gray"
                            android:paddingRight="@dimen/paddingRight_15"
                            android:paddingLeft="@dimen/marginLeft_15"
                            android:paddingTop="@dimen/marginTop_10"
                            android:paddingBottom="@dimen/paddingBottom_10"
                            android:layout_marginRight="@dimen/marginRight_20"
                            android:drawablePadding="@dimen/drawablePadding_6"/>
                    <TextView
                            android:id="@+id/tv_startRecording"
                            android:text="开始录音"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/tape_0"
                            android:background="@drawable/solid_shape_gray"
                            android:paddingRight="@dimen/paddingRight_15"
                            android:paddingLeft="@dimen/marginLeft_15"
                            android:paddingTop="@dimen/marginTop_10"
                            android:layout_marginLeft="@dimen/marginLeft_20"
                            android:paddingBottom="@dimen/paddingBottom_10"
                            android:drawablePadding="@dimen/drawablePadding_6"/>

                    <View android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                        android:text="(超过1分钟请录制多个文件)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView26"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/textcolor_red"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/marginTop_10"/>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="@dimen/marginTop_15"
                      android:background="@color/background_f4f4f4"/>


            </LinearLayout>

            <TextView
                    android:id="@+id/tv_submitCorrections"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_48"
                    android:text="提交批改"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_14"
                    android:gravity="center"
                    android:background="@color/background_yellow"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>