<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.daily.SelectClassActivity"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginRight="@dimen/marginRight_12"
            android:layout_marginLeft="@dimen/marginLeft_12"
            android:layout_marginBottom="@dimen/marginBottom_10"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">
        <TextView
                android:id="@+id/tv_classTitle"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/text_color_333333"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:layout_marginTop="@dimen/marginTop_10"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/marginTop_40">
            <TextView
                    android:id="@+id/tv_curriculum"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_13"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/teacher_head"
                    android:id="@+id/imageView6"/>
            <TextView
                    android:id="@+id/tv_teacher"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_a5a5a5"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="6dp"/>
            <TextView
                    android:id="@+id/tv_teacherName"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/marginTop_70">
            <TextView
                    android:id="@+id/tv_classroom"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_a5a5a5"
                    android:textSize="@dimen/text_size_13"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_studying"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_green"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="6dp"/>
            <TextView
                    android:id="@+id/tv_auditioned"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_yellow"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginLeft="6dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>