<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4"
        tools:context=".ui.activity.edu.StudentManagementActivity">
    <FrameLayout
            android:id="@+id/frameLayout_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_60"
            android:background="@color/white"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginLeft="@dimen/marginLeft_10">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_studentImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/default_head"
                android:layout_gravity="center_vertical"
                app:civ_border_color="#FF000000"
                android:layout_marginLeft="@dimen/marginLeft_10"/>
        <TextView
                android:id="@+id/tv_studentName"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_333333"
                android:layout_marginLeft="70dp"
                android:textSize="@dimen/text_size_13"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="@dimen/marginBottom_15"/>
        <TextView
                android:id="@+id/tv_studentAccount"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color_a5a5a5"
                android:layout_marginLeft="70dp"
                android:textSize="@dimen/text_size_12"
                android:layout_marginTop="@dimen/marginTop_10"/>


        <TextView
                android:id="@+id/tv_studentDtate"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:textColor="@color/textcolor_red"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/text_size_10"
                android:layout_marginBottom="@dimen/marginBottom_15"
                android:layout_marginRight="@dimen/marginRight_13"/>
        <TextView
                android:id="@+id/tv_studentParrent"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:textColor="@color/text_color_333333"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="@dimen/marginTop_10"
                android:layout_marginRight="@dimen/marginRight_13"
                android:textSize="@dimen/text_size_11"/>
    </FrameLayout>
    <include layout="@layout/view_line_onedp"/>
</LinearLayout>