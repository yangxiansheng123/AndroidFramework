<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classDrawerLayout"
        android:background="@drawable/solid_shape_white"
        tools:context=".ui.activity.edu.ClassManagemenActivity"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_marginRight="@dimen/marginRight_10"
        android:layout_marginBottom="@dimen/marginBottom_10">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeft_10"
            android:paddingRight="@dimen/paddingRight_10"
            android:paddingTop="@dimen/paddingTop_10">
        <TextView
                android:id="@+id/tv_classmangType"
                android:text="1对1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_11"
                android:textStyle="bold"
                android:background="@drawable/solid_shape_yellow_gradient"
                android:paddingRight="@dimen/paddingRight_5"
                android:paddingLeft="@dimen/paddingLeft_5"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"/>
        <TextView
                android:id="@+id/tv_cmNameType"
                android:text="张大丫"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginLeft="9dp"/>
        <TextView
                android:id="@+id/tv_cmCategory"
                android:text="钢琴类别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_8"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/tv_cmRedOrAudition"
                android:text="c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor_AEAEAE"
                android:textSize="@dimen/text_size_13"
                android:layout_marginTop="@dimen/marginTop_8"
                android:paddingLeft="@dimen/paddingLeft_10"
                android:paddingRight="@dimen/paddingRight_10"/>
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_35"
            android:background="@drawable/solid_shape_f4_bottom_left_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/paddingLeft_10"
            android:layout_marginTop="@dimen/marginTop_5">
        <ImageView
                android:id="@+id/tv_refundTuition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/clock"
                android:gravity="left|center_vertical"/>

        <TextView
                android:id="@+id/tv_cmTimeTable"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/text_color_a5a5a5"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:background="@color/background_F9F9F9"
                android:ellipsize="end"
                android:paddingRight="@dimen/paddingRight_10"/>

    </LinearLayout>

</LinearLayout>