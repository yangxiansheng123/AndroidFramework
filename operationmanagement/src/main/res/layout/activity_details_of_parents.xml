<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:toggle="http://scchemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app1="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.edu.DetailsOfParentsActivity"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4">
    <include layout="@layout/toolbar_head_text_right_two_img"
             android:id="@+id/toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/solid_shape_white">
            <LinearLayout
                    android:id="@+id/tv_parentDetails"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60"
                    android:gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp">
                <ImageView
                        android:id="@+id/img_parentDetails"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@mipmap/default_head"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>
                <TextView
                        android:id="@+id/tv_parentName"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_13"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_right"
                        android:id="@+id/imageView4"
                        android:layout_marginRight="@dimen/marginRight_13"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_minHeight_40"
                    android:gravity="center_vertical">
                <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:layout_marginLeft="@dimen/marginLeft_15"
                        android:textColor="@color/textcolor_AEAEAE"/>
                <TextView
                        android:id="@+id/tv_parentPhone"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>
                <TextView
                        android:id="@+id/tv_parentType"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginRight="@dimen/marginRight_13"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_minHeight_40"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/tv_parentSex"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:layout_marginLeft="@dimen/marginLeft_15"
                        android:textColor="@color/textcolor_AEAEAE"/>
                <TextView
                        android:id="@+id/tv_parentAge"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:id="@+id/tv_parentLearnDegree"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginRight="@dimen/marginRight_13"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_distributionState"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center"
                android:background="@drawable/solid_shape_white"
                android:paddingLeft="@dimen/paddingLeft_10"
                android:paddingRight="@dimen/paddingRight_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:layout_marginLeft="@dimen/marginLeft_10">
            <TextView
                    android:text="学员资料来源"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"/>
            <TextView
                    android:id="@+id/tv_distributionState"
                    android:text="导流活动"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_11"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/arrow_right"
                    android:textColor="@color/textcolor_red"
                    android:drawablePadding="@dimen/drawablePadding_10"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/solid_shape_white">
            <LinearLayout
                    android:id="@+id/ll_followUpRecord"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_60"
                    android:gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp">

                <TextView
                        android:text="跟进情况"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_13"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_right"
                        android:layout_marginRight="@dimen/marginRight_13"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@color/background_f4f4f4"
                    android:layout_marginLeft="@dimen/marginLeft_10"
                    android:layout_marginRight="@dimen/marginRight_10"
                    android:padding="5dp">
                <TextView
                        android:id="@+id/tv_followUpMethod"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/textcolor_AEAEAE"/>

            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_minHeight_40"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/marginTop_10">
                <TextView
                        android:id="@+id/tv_followUpPerson"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:layout_marginLeft="@dimen/marginLeft_15"
                        android:textColor="@color/textcolor_AEAEAE"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/tv_followUpState"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginRight="@dimen/marginRight_13"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_minHeight_40"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/tv_followUpTime"
                        android:text=""
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:layout_marginLeft="@dimen/marginLeft_15"
                        android:textColor="@color/textcolor_AEAEAE"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/tv_followUpCount"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginRight="@dimen/marginRight_13"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center"
                android:background="@drawable/solid_shape_white"
                android:paddingLeft="@dimen/paddingLeft_10"
                android:paddingRight="@dimen/paddingRight_10"
                android:layout_marginRight="@dimen/marginRight_10"
                android:layout_marginLeft="@dimen/marginLeft_10">
            <TextView
                    android:text="停止跟进"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/text_color_333333"/>

            <com.suke.widget.SwitchButton
                    android:id="@+id/toggleButton"
                    android:layout_width="54dp"
                    app1:sb_checked_color="#FBD415"
                    toggle:tbOffColor="#ddd"
                    toggle:tbSpotColor="#00f"
                    toggle:tbOffBorderColor="#000"
                    toggle:tbBorderWidth="2dp"
                    android:layout_height="30dp"
                    app1:sb_show_indicator="false">
            </com.suke.widget.SwitchButton>

        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"/>


    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_60"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_alignParentBottom="true">
        <TextView
                android:text="跟进"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_11"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/trace"
                android:drawablePadding="@dimen/drawablePadding_6"/>
        <TextView
                android:text="通话"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_callPhone"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_11"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/call_phone"
                android:drawablePadding="@dimen/drawablePadding_6"/>
        <TextView
                android:text="试听"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_11"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/audition"
                android:drawablePadding="@dimen/drawablePadding_6"/>
        <TextView
                android:id="@+id/tv_purchaseCourse"
                android:text="购课"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_11"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/purchase_course"
                android:drawablePadding="@dimen/drawablePadding_6"/>
        <TextView
                android:text="排班"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_11"
                android:layout_weight="1"
                android:gravity="center"

                android:drawableTop="@mipmap/schedule_man"
                android:drawablePadding="@dimen/drawablePadding_6"/>
    </LinearLayout>
</RelativeLayout>