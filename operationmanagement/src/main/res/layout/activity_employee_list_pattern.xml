<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_marginRight="@dimen/marginRight_10"
        tools:context=".ui.activity.edu.EmployeeListActivity">
    <LinearLayout
            android:id="@+id/ll_employeeBg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="@dimen/paddingLeft_10"
            android:paddingRight="@dimen/paddingRight_13">

        <TextView
                android:id="@+id/tv_employeePosition"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_13"
                android:background="@drawable/solid_shape_yellow_gradient"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"/>

        <TextView
                android:id="@+id/tv_employeeName"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_15"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/marginLeft_15"/>

        <TextView
                android:id="@+id/tv_employeeAccount"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/textcolor_AEAEAE"
                android:textSize="@dimen/text_size_13"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/marginLeft_15"/>


        <TextView
                android:id="@+id/tv_employeeState"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textcolor_green"
                android:textSize="@dimen/text_size_13"
                android:gravity="center_vertical"/>
    </LinearLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_f4f4f4"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"/>
</LinearLayout>