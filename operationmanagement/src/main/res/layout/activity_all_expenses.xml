<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4"
        tools:context=".ui.activity.fiance.AllExpensesActivity">
    <include layout="@layout/toolbar_head_text_right_two_img"/>

    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_above="@+id/seekBar1"
            android:background="@color/white"/>

    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/white"/>

    <include layout="@layout/view_line_tendp"/>
    <TextView
            android:id="@+id/tv_historySalary"
            android:text="历史固定费用"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:drawableLeft="@mipmap/student_refunds"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/drawablePadding_15"
            android:paddingLeft="@dimen/paddingLeft_16"
            android:drawableRight="@mipmap/arrow_right"
            android:paddingRight="@dimen/paddingRight_16"
            android:background="@color/white"/>

    <TextView
            android:id="@+id/tv_changeRecord"
            android:text="固定费用支出明细如下:"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/marginTop_10"
            android:paddingLeft="@dimen/paddingLeft_16"
            android:paddingRight="@dimen/paddingRight_16"
            android:textSize="@dimen/text_size_13"
            android:background="@color/white"/>
</LinearLayout>