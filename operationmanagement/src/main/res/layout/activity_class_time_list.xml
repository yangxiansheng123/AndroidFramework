<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.edu.ClassTimeListActivity"
        android:orientation="vertical"
        android:background="@color/background_f4f4f4">

    <include layout="@layout/toolbar_head"/>

    <LinearLayout
            android:id="@+id/ll_prompt"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_height="@dimen/layout_height_35">

        <TextView
                android:text="长按课可删除已有时间段"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/textcolor_999999"
                android:layout_marginLeft="@dimen/marginLeft_10"/>

        <ImageView
                android:id="@+id/img_closePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close_prompt"
                android:layout_marginRight="@dimen/marginRight_12"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_shape_white"
            android:layout_margin="@dimen/margin_10">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_35"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/marginTop_5">


            <TextView
                    android:text="输入新的时间段"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_color_333333"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/marginLeft_13"/>

            <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:layout_marginRight="@dimen/marginRight_13"
                    android:textColor="@color/textcolor_999999"
                    android:textSize="@dimen/text_size_12"
                    android:background="@drawable/solid_shape_yellow"
                    android:paddingRight="9dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:gravity="center_vertical">
            <TextView
                    android:id="@+id/tv_startTime"
                    android:text="开始时间"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/textcolor_999999"/>
            <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_f4f4f4"/>
            <TextView
                    android:id="@+id/tv_endTime"
                    android:text="结束时间"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/textcolor_999999"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/marginRight_10"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginBottom="@dimen/marginBottom_10"
            android:background="@color/background_00000000">
        <TextView
                android:id="@+id/tv_bg"
                android:text="选择已有时间段"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_minHeight_40"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_10"
                android:layout_marginTop="@dimen/marginTop_13"
                android:background="@drawable/solid_shape_white_top_left_right"/>

        <ListView
                android:id="@+id/lv_timeList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:dividerHeight="0dp"
                android:divider="@null"/>
    </LinearLayout>
</LinearLayout>