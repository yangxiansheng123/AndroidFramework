<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- -  财务分析-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="@dimen/paddingLeft_10"
                  android:paddingRight="@dimen/paddingRight_13"
                  android:orientation="horizontal"
                  android:layout_marginTop="@dimen/marginTop_10">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:textColor="@color/textcolor_20e8d1"
                  android:textSize="@dimen/text_size_14"
                  android:text="-  财务分析"
                  android:layout_weight="1"/>


    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_marginTop="@dimen/marginTop_30">

        <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart_financeAnalysis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

            <LinearLayout
                    android:id="@+id/ll_fixedCost"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_fixedCostColor"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#0081BD"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:id="@+id/tv_fixedCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/textcolor_999999"
                        android:text="固定费用"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/marginLeft_10"
                        android:drawableRight="@mipmap/arrow_right"
                        android:drawablePadding="@dimen/drawablePadding_6"
                        android:layout_marginRight="@dimen/marginRight_13"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_marketColor"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#0081BD"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:id="@+id/tv_marketCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/textcolor_999999"
                        android:text="营销费用"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/marginLeft_10"
                        android:drawableRight="@mipmap/arrow_right"
                        android:drawablePadding="@dimen/drawablePadding_6"
                        android:layout_marginRight="@dimen/marginRight_13"/>


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_dailyColor"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#0081BD"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:id="@+id/tv_dailyCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/textcolor_999999"
                        android:text="日常费用"
                        android:drawableRight="@mipmap/arrow_right"
                        android:drawablePadding="@dimen/drawablePadding_6"
                        android:layout_marginRight="@dimen/marginRight_13"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_learnColor"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#0081BD"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:id="@+id/tv_learnCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/textcolor_999999"
                        android:text="学习耗材"
                        android:drawableRight="@mipmap/arrow_right"
                        android:drawablePadding="@dimen/drawablePadding_6"
                        android:layout_marginRight="@dimen/marginRight_13"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_30"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_wageColor"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#0081BD"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

                <TextView
                        android:id="@+id/tv_wageExpenditure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/textcolor_999999"
                        android:text="工资支出"
                        android:drawableRight="@mipmap/arrow_right"
                        android:drawablePadding="@dimen/drawablePadding_6"
                        android:layout_marginRight="@dimen/marginRight_13"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            android:text="预估年盈利：18万元"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginTop="@dimen/marginTop_25"
            android:lineSpacingMultiplier="1.2"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/marginTop_15"
            android:background="@drawable/dotted_line"
            android:layerType="software"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_blue"
            android:textSize="@dimen/text_size_10"
            android:text="月均成本：4.3万    月均收入：5.8万    月均盈利：1.5万"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginTop="@dimen/marginTop_15"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginRight="@dimen/marginRight_15"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@mipmap/sys_line"
              android:layout_marginTop="@dimen/marginTop_30"
              android:layout_marginBottom="@dimen/marginBottom_20"/>

</LinearLayout>
