<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_f4f4f4"
        tools:context=".ui.activity.daily.CommitPreviewHomeworkctivity" android:orientation="vertical">

    <include layout="@layout/toolbar_head"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_10">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/solid_shape_white">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_10">
                    <TextView
                            android:text="作业信息"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/text_color_333333"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_35"
                        android:padding="@dimen/padding_10"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="作业名称"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/text_color_a5a5a5"/>
                    <TextView
                            android:text="高等钢琴第几次作业"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/text_color_333333"
                            android:layout_marginLeft="@dimen/marginLeft_16"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_35"
                        android:padding="@dimen/padding_10"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="作业内容"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/text_color_a5a5a5"/>
                    <TextView
                            android:text="高等钢琴第几次作业"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/text_color_333333"
                            android:layout_marginLeft="@dimen/marginLeft_16"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_35"
                        android:padding="@dimen/padding_10"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="作业附件"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/text_color_a5a5a5"/>
                    <TextView
                            android:text="高等钢琴第几次作业"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/text_color_333333"
                            android:layout_marginLeft="@dimen/marginLeft_16"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_35"
                        android:padding="@dimen/padding_10"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="附件格式"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/text_color_a5a5a5"/>
                    <TextView
                            android:text="高等钢琴第几次作业"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/text_color_333333"
                            android:layout_marginLeft="@dimen/marginLeft_16"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_35"
                        android:padding="@dimen/padding_10"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="截止时间"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_11"
                            android:textColor="@color/text_color_a5a5a5"/>
                    <TextView
                            android:text="高等钢琴第几次作业"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/text_color_333333"
                            android:layout_marginLeft="@dimen/marginLeft_16"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/solid_shape_white"
                    android:layout_marginTop="@dimen/marginTop_10">


                <TextView
                        android:text="作业内容"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_color_333333"
                        android:padding="@dimen/padding_10"/>

                <include layout="@layout/view_line_onedp"/>

                <ListView
                        android:id="@+id/lv_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/marginTop_15"/>


                <TextView
                        android:text="保存并提交作业"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height_44"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/solid_shape_yellow_30rd"
                        android:textColor="@color/text_color_333333"
                        android:layout_marginTop="@dimen/marginTop_30"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="@dimen/marginBottom_20"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/solid_shape_white"
                    android:layout_marginTop="@dimen/marginTop_10"
            android:layout_marginBottom="@dimen/marginBottom_30">


                <TextView
                        android:text="作业上交不成功？"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_color_333333"
                        android:padding="@dimen/padding_10"/>

                <include layout="@layout/view_line_onedp"/>


                <TextView
                        android:text="@string/network_erro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textColor="@color/text_color_888888"
                        android:layout_marginTop="@dimen/marginTop_10"
                        android:lineSpacingMultiplier="1.3"
                        android:layout_marginBottom="@dimen/marginBottom_10"
                        android:layout_marginLeft="@dimen/marginLeft_10"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>