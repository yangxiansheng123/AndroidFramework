<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/paddingLeft_10"
            android:layout_height="@dimen/layout_height_50"
            android:layout_marginTop="@dimen/marginTop_10">
        <TextView
                android:text="-  延展分析  -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/textcolor_20e8d1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/layout_height_180"
                  android:gravity="center"
                  android:paddingLeft="@dimen/paddingLeft_10"
                  android:paddingRight="@dimen/paddingRight_13"
                  android:layout_marginTop="@dimen/marginTop_5"
                  android:layout_marginBottom="@dimen/marginBottom_10">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/extension_analysis">

            <TextView
                    android:id="@+id/tv_averagValue"
                    android:text="120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/white"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="@dimen/marginTop_10"/>


            <TextView
                    android:id="@+id/tv_realIncome"
                    android:text="120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/marginTop_10"
                    android:layout_marginLeft="62dp"/>
            <TextView
                    android:id="@+id/tv_endSpot"
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/marginTop_10"
                    android:layout_marginLeft="90dp"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            android:text="目前学员200人，收支平衡180人
市场合理值120人"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginTop="@dimen/marginTop_25"
            android:lineSpacingMultiplier="1.2"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="@dimen/marginTop_15"
            android:background="@drawable/dotted_line"
            android:layerType="software"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginRight="@dimen/marginRight_10"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolor_blue"
            android:textSize="@dimen/text_size_10"
            android:text="机构目前学员平均客单价/低于市场平均水平
建议优 化产品结构，提高单价。"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:layout_marginTop="@dimen/marginTop_15"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginRight="@dimen/marginRight_15"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@mipmap/sys_line"
              android:layout_marginTop="@dimen/marginTop_30"
              android:layout_marginBottom="@dimen/marginBottom_20"/>


</LinearLayout>
